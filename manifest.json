{
  "manifest_version": 2,

  "name": "Bungo Helper",
  "version": "0.1",
  "description": "A Game Helper for Bungo.",
  "icons": { "128": "assets/icon.png"},
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },

  "browser_action": {
    "default_icon": "assets/icon_128.png",
    "default_popup": "popup/popup.html",
    "default_title": "Bungo_Helper"
  },
  "web_accessible_resources": [
      "assets/icon.png"
  ],
  "permissions": [
    "activeTab",
    "notifications",
    "alarms",
    "http://*/*"
  ],
  "devtools_page": "devtools/devtools.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; default-src 'self'; chrome-extension-resource: ; connect-src *; frame-src *;"
}
